<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/someMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/enableTremoloSwitch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:checked="false"
        android:gravity="center_vertical"
        android:text="@string/enable_tremolo_switch_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/someMessage"
        app:layout_constraintBottom_toTopOf="@+id/tremoloRateSeekBarLayout" />



    <LinearLayout
        android:id="@+id/tremoloRateSeekBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tremoloRateSeekBarLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center_vertical"
            android:text="@string/tremolo_rate_seekbar_label"
            />

        <SeekBar
            android:id="@+id/tremoloRateSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:indeterminate="false"
            android:gravity="fill_horizontal"
            android:max="@integer/tremolo_rate_seekbar_max"
            android:paddingBottom="8dp"
            android:progress="@integer/tremolo_rate_seekbar_default" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>